package amazon;

import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class Item {
	private int rank;
	private String name;
	private String asn;
	private double price;
	private double rating;
	private double ratingNum;
	
	public Item(int index, Elements query) {
		
		//document supporst better query functions
		Document doc = new Document(query.toString());
		
		rank = index;
		asn = GetAsn(query);
		name = GetName(doc);
	};

	
	private String GetName(Document query) {

		Elements s = query.getElementsByClass("a-link-normal s-access-detail-page  s-color-twister-title-link a-text-normal");
		String att = s.first().attr("title");
		
		//String name = result.first().attr("data-attribute");
		
		return name;
	}

	private String GetAsn(Elements query) {
		//TODO error check, return a default value
		String att = query.first().attr("data-asin");
		return att;
	};

}
